<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="7dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:id="@+id/llrow"

        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/todoimg"
            android:src="@drawable/assignment_img"

            />


        <TextView
            android:id="@+id/disptitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@id/todoimg"
            android:layout_marginStart="10dp"
            android:text="Task Name"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/dispdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/todoimg"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="4dp"
            android:text="This is Description Text"
            android:layout_below="@+id/disptitle"
            android:layout_marginBottom="10dp"
            android:textSize="20dp" />


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/dispdetail"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>